<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/midAubergine100Percent"
    tools:context="com.clww.nine_pad.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        android:id="@+id/buttonstart"
        android:layout_alignParentLeft="true"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="4dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/buttonstop"
        android:layout_alignTop="@+id/buttonstart"
        android:layout_centerHorizontal="true"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="37dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonstart"
        android:layout_marginLeft="37dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/buttonplaylast"
        android:layout_alignTop="@+id/buttonstop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP PLAYING RECORDING "
        android:id="@+id/buttonstopplay"
        android:layout_below="@+id/buttonstop"
        android:layout_centerHorizontal="true"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="25dp"
        app:layout_constraintRight_toRightOf="@+id/button9"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="38dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonplaylast"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="25dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button1"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:background="@drawable/nine_buttons"
        android:text="@string/button_1_label"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintLeft_toLeftOf="@+id/button4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:background="@drawable/nine_buttons"
        android:text="@string/button_2_label"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintRight_toLeftOf="@+id/button3"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:background="@drawable/nine_buttons"
        android:text="@string/button_3_label"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintRight_toRightOf="@+id/button6" />

    <Button
        android:id="@+id/button4"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:background="@drawable/nine_buttons"
        android:text="@string/button_4_label"
        app:layout_constraintRight_toLeftOf="@+id/button5"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/button5"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:background="@drawable/nine_buttons"
        android:text="@string/button_5_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/button6"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:background="@drawable/nine_buttons"
        android:text="@string/button_6_label"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/button5"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:background="@drawable/nine_buttons"
        android:text="@string/button_7_label"
        app:layout_constraintRight_toLeftOf="@+id/button8"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:background="@drawable/nine_buttons"
        android:text="@string/button_8_label"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:layout_constraintRight_toRightOf="@+id/button5" />

    <Button
        android:id="@+id/button9"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:background="@drawable/nine_buttons"
        android:text="@string/button_9_label"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_Settings_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintVertical_bias="0.03" />




</android.support.constraint.ConstraintLayout>
