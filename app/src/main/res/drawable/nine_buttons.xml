<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--start is button top-->

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/ubuntuOrange80Percent"
                android:endColor="@color/ubuntuOrange100Percent"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/warmGray100Percent"
                android:startColor="@color/warmGray100Percent"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/ubuntuOrange70Percent"
                android:endColor="@color/ubuntuOrange90Percent"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>